<div class="auth-wrapper">
  <div class="auth-content">
    <div class="auth-bg">
      <span class="r"></span>
      <span class="r s"></span>
      <span class="r s"></span>
      <span class="r"></span>
    </div>
    <div class="card">
      <div class="card-body text-center">
        <div class="mb-4">
          <i class="feather icon-unlock auth-icon"></i>
        </div>
        <h3 class="mb-4">Login</h3>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form-control" %>
          </div>
          <div class="input-group mb-4">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class: "form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="form-group text-left">
              <div class="checkbox checkbox-fill d-inline">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "cr" %>
              </div>
            </div>
          <% end %>
          <div class="actions">
            <%= f.submit "Log in", class: "btn btn-primary shadow-2 mb-4" %>
          </div>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>