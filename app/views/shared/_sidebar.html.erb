<nav class="pcoded-navbar">
  <div class="navbar-wrapper">
    <div class="navbar-brand header-logo">
      <%= link_to root_path, class: "b-brand" do %>
        <div class="b-bg">
          <i class="fas fa-chart-line"></i>
        </div>
        <span class="b-title">PriceItNow</span>
      <% end %>
      <a class="mobile-menu" id="mobile-collapse" href="#!"><span></span></a>
    </div>
    <div class="navbar-content scroll-div ps">
      <ul class="nav pcoded-inner-navbar">
        <li class="nav-item <%= 'active' if params[:action].eql?('dashboard') %>">
          <%= link_to root_path, class: "nav-link" do %>
            <span class="pcoded-micon">
              <i class="fa fa-home"></i>
            </span>
            <span class="pcoded-mtext">Dashboard</span>
          <% end %>
        </li>
        <li class="nav-item <%= 'active' if params[:controller].eql?('handbags') && params[:action].eql?('filter') %>">
          <%= link_to filter_handbags_path, class: "nav-link" do %>
            <span class="pcoded-micon">
              <i class="fas fa-filter"></i>
            </span>
            <span class="pcoded-mtext">Filter</span>
          <% end %>
        </li>
        <li class="nav-item <%= 'active' if params[:controller].eql?('handbags') && params[:action].eql?('index') %>">
          <%= link_to handbags_path, class: "nav-link" do %>
            <span class="pcoded-micon">
              <i class="fas fa-shopping-bag"></i>
            </span>
            <span class="pcoded-mtext">Handbags</span>
          <% end %>
        </li>
        <% if current_user.admin? %>
          <li class="nav-item <%= 'active' if params[:controller].eql?('users') %>">
            <%= link_to users_path, class: "nav-link" do %>
              <span class="pcoded-micon">
                <i class="fa fa-users"></i>
              </span>
              <span class="pcoded-mtext">Users</span>
            <% end %>
          </li>
        <% end %>
        <li class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
            <span class="pcoded-micon">
              <i class="fa fa-sign-out-alt"></i>
            </span>
            <span class="pcoded-mtext">Logout</span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
