<div class="row">
  <div class="col-sm-12">
    <canvas id="price_chart" width="1066" height="300"></canvas>
  </div>
  <div class="col-md-6 col-xl-4 mt-5">
    <h5>Minimum Price</h5>
    <hr>
    <div class="card mb-3">
      <%= image_tag @min_price_handbag.image, class: "card-img-top" if @max_price_handbag.image.present? %>
      <div class="card-body">
        <h5 class="card-title"><%= @min_price_handbag.name %></h5>
        <p class="card-text"><%= @min_price_handbag.prices.latest.currency %><%= @min_price_handbag.prices.latest.price %></p>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-xl-4 mt-5">
    <h5>Average Price</h5>
    <hr>
    <div class="card mb-3">
      <%= image_tag @avg_price_handbag.image, class: "card-img-top" if @avg_price_handbag.image.present? %>
      <div class="card-body">
        <h5 class="card-title"><%= @avg_price_handbag.name %></h5>
        <p class="card-text"><%= @avg_price_handbag.prices.latest.currency %><%= @avg_price_handbag.prices.latest.price %></p>
      </div>
    </div>
  </div>

  <div class="col-md-6 col-xl-4 mt-5">
    <h5>Maximum Price</h5>
    <hr>
    <div class="card mb-3">
      <%= image_tag @max_price_handbag.image, class: "card-img-top" if @max_price_handbag.image.present? %>
      <div class="card-body">
        <h5 class="card-title"><%= @max_price_handbag.name %></h5>
        <p class="card-text"><%= @max_price_handbag.prices.latest.currency %><%= @max_price_handbag.prices.latest.price %></p>
      </div>
    </div>
  </div>
  <div class="col-sm-12">
    <div class="table-responsive mt-3">
      <table class="display table nowrap table-striped table-hover dataTable" id="filtered_results">
        <thead>
          <tr>
            <th scope="col" class="sort" data-sort="reference_no">Reference No</th>
            <th scope="col" class="sort" data-sort="name">Name</th>
            <th scope="col" class="sort" data-sort="price">Latest Price</th>
            <th scope="col">Color</th>
            <th scope="col">Cost</th>
            <th scope="col">Model</th>
            <th scope="col">Material</th>
            <th scope="col">Length(cm)</th>
            <th scope="col">Width(cm)</th>
            <th scope="col">Height(cm)</th>
            <th scope="col">Website</th>
          </tr>
        </thead>
        <tbody>
          <% handbags.each do |handbag| %>
            <tr>
              <td><%= handbag.reference_no %></td>
              <td><%= handbag.name %></td>
              <td><%= handbag.prices.latest.currency %><%= handbag.prices.latest.price %></td>
              <td><%= handbag.color %></td>
              <td><%= handbag.cost %></td>
              <td><%= handbag.model %></td>
              <td><%= handbag.material %></td>
              <td><%= handbag.length %></td>
              <td><%= handbag.width %></td>
              <td><%= handbag.height %></td>
              <td><%= handbag.website %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>