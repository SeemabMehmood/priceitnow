<div class="pcoded-main-container">
  <div class="pcoded-wrapper">
    <div class="pcoded-content">
      <div class="pcoded-inner-content">
        <div class="main-body">
          <div class="page-wrapper">
            <div class="row">
              <div class="col-sm-12">
                <div class="card">
                  <div class="card-header">
                    <h5>All Handbags</h5>
                    <div class="card-header-right"></div>
                  </div>
                  <div class="card-block">
                    <div class="table-responsive mt-3">
                      <table class="display table nowrap table-striped table-hover dataTable">
                        <thead>
                          <tr>
                            <th scope="col" class="sort" data-sort="name">Name</th>
                            <th scope="col" class="sort" data-sort="model">Brand</th>
                            <th scope="col" class="sort" data-sort="color">Color</th>
                            <th scope="col" class="sort" data-sort="price">Latest Price</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% @handbags.each do |handbag| %>
                            <tr>
                              <td>
                                <span data-toggle="tooltip" data-placement="right" title="" data-original-title="<%= handbag.name %>">
                                  <%= truncate(handbag.name, length: 40) %>
                                </span>
                              </td>
                              <td><%= handbag.brand == "0" ? 'N/A' : handbag.brand %></td>
                              <td><%= handbag.color&.humanize %></td>
                              <td><%= handbag.prices.last.currency %><%= handbag.prices.last.price %></td>
                              <td>
                                <%= link_to handbag_path(handbag.id) do %>
                                  <i class="fas fa-eye"></i>
                                <% end %>
                              </td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>